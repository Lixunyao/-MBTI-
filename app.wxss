/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
  background-color: #FFF9E6;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.btn-primary {
  background-color: #6ECEDA;
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 0;
  width: 80%;
  text-align: center;
  font-weight: bold;
  margin: 30rpx auto;
}

.card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}