.container {
  padding: 40rpx 0;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.test-image {
  width: 100%;
  border-radius: 10rpx;
}

.instructions {
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.instruction-item {
  display: flex;
  margin-bottom: 20rpx;
}

.item-number {
  color: #6ECEDA;
  font-weight: bold;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.item-content {
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
}

.pet-type {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

radio-group {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  margin: 0 30rpx;
}

.radio-item text {
  margin-left: 10rpx;
  color: #333;
}

.btn-primary {
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}